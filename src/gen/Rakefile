require 'rake/clean'
require 'erb'

CLOBBER.concat(['z80.go', 'opcodes.go'])

file "opcodes.go" => ["z80.pl", "opcodes.go.erb"] do
  template = ERB.new(File.read('opcodes.go.erb'))

  opcodes_base = `./z80.pl opcodes_base.dat`
  opcodes_cb = `./z80.pl opcodes_cb.dat`
  opcodes_ed = `./z80.pl opcodes_ed.dat`
  opcodes_dd = opcodes_fd = `./z80.pl opcodes_ddfd.dat`
  opcodes_ddfdcb = `./z80.pl opcodes_ddfdcb.dat`

  puts "Write opcodes.go"
  File.open("opcodes.go", 'w') { |f| f << template.result(binding) }
  `gofmt -w opcodes.go`
end

file "z80.go" => ["z80.go.erb"] do
  template = ERB.new(File.read('z80.go.erb'))
  puts "Write z80.go"
  File.open("z80.go", 'w') { |f| f << template.result(binding) } 
  `gofmt -w z80.go`
end

task :copy_all => ['z80.go', 'opcodes.go'] do
  cp "z80.go", "../spectrum/"
  cp "opcodes.go", "../spectrum/"
  Dir.chdir("../spectrum") do
    sh "make && gotest"
  end
end

task :default => ['z80.go', 'opcodes.go']
